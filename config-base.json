{
  "extends": ["tslint:recommended", "tslint-eslint-rules", "tslint-config-security", "tslint-config-prettier"],
  "rules": {
    "ban-comma-operator": true,
    "binary-expression-operand-order": true,
    "cyclomatic-complexity": { "severity": "warning" },
    "deprecation": true,
    "member-ordering": { "options": { "order": "fields-first" } },
    "no-bitwise": { "severity": "warning" },
    "no-boolean-literal-compare": true,
    "no-console": false,
    "no-constant-condition": true,
    "no-construct": true,
    "no-debugger": true,
    "no-duplicate-imports": true,
    "no-duplicate-switch-case": true,
    "no-duplicate-variable": [true, "check-parameters"],
    "no-dynamic-delete": true,
    "no-extra-semi": true,
    "no-floating-promises": true,
    "no-for-in-array": { "severity": "warning" },
    "no-implicit-dependencies": [true, "dev"],
    "no-inferrable-types": true,
    "no-inferred-empty-object-type": true,
    "no-invalid-template-strings": true,
    "no-mergeable-namespace": true,
    "no-object-literal-type-assertion": true,
    "no-parameter-properties": true,
    "no-require-imports": true,
    "no-return-await": true,
    "no-sparse-arrays": true,
    "no-this-assignment": true,
    "no-unbound-method": [true, "ignore-static"],
    "no-unnecessary-callback-wrapper": [true, "only-arrow-functions", "arrow-return-shorthand"],
    "no-unnecessary-class": true,
    "no-unnecessary-qualifier": true,
    "no-unnecessary-type-assertion": true,
    "no-unused-expression": [true, "allow-fast-null-checks"],
    "number-literal-format": true,
    "prefer-conditional-expression": [true, "check-else-if"],
    "prefer-method-signature": true,
    "prefer-object-spread": true,
    "prefer-readonly": true,
    "prefer-template": true,
    "prefer-while": { "severity": "warning" },
    "promise-function-async": true,
    "restrict-plus-operands": true,
    "return-undefined": true,
    "switch-default": true,
    "triple-equals": [true, "allow-null-check", "allow-undefined-check"],
    "type-literal-delimiter": true,
    "use-default-type-parameter": true,
    "valid-typeof": true
  }
}
